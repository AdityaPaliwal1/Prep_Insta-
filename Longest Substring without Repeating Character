class Solution {
public:
    int lengthOfLongestSubstring(string s) {
            int n = s.length();
    int Â  maxLength = 0;
    int left = 0, right = 0;
    unordered_set<char> charSet;

    while (right < n) {
        if (charSet.count(s[right]) == 0) {
            charSet.insert(s[right]);
            maxLength = max(maxLength, right - left + 1);
            right++;
        } else {
            charSet.erase(s[left]);
            left++;
        }
    }

    return maxLength;
    }
};
